<resources>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="searchViewStyle">@style/SearchViewMy</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoAnimTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ToolbarColoredBackArrow">
        <item name="android:textColorSecondary">@color/color_primary</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textColorPrimary">@color/color_primary</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="TextAppearance.AppCompat.TextAppearanceLarge">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.TextAppearanceNormal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextAppearance.AppCompat.TextAppearanceNormal.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.AppCompat.TextAppearanceNormal.Light.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.TextAppearanceNormal.Secondary">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TextAppearance.AppCompat.TextAppearanceSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextAppearance.AppCompat.TextAppearanceSmall.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.TextAppearanceSmall.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextAppearance.AppCompat.TextAppearanceSmall.Secondary">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TextAppearance.AppCompat.TextAppearanceTiny">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/font_tiny</item>
    </style>

    <style name="Button">
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/btn_primary_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/btn_secondary_rounded</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>
</resources>
